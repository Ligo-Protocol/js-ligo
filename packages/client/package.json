{
  "name": "@js-ligo/client",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "pnpm build:clean && pnpm build:types && pnpm build:js",
    "test:it": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "lint": "eslint src/* test/* --fix",
    "prepare": "pnpm build"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ceramicnetwork/blockchain-utils-linking": "^2.0.12",
    "@js-ligo/agreements": "workspace:^0.1.0",
    "@js-ligo/vocab": "workspace:^0.1.0",
    "@orbisclub/orbis-sdk": "^0.3.46",
    "did-session": "^0.1.4",
    "dids": "^3.4.0"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  },
  "devDependencies": {
    "@ethersproject/wallet": "^5.7.0",
    "uint8arrays": "^3.1.0"
  }
}
