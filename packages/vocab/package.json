{
  "name": "@js-ligo/vocab",
  "version": "0.2.1",
  "description": "Typescript types for Ligo vocabulary",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "pnpm build:clean && pnpm build:types && pnpm build:js",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "lint": "eslint src/* --fix",
    "prepare": "pnpm build"
  },
  "devDependencies": {
    "@ipld/schema": "^4.1.2",
    "multiformats": "^9.9.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  }
}
