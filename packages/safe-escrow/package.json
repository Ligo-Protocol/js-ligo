{
  "name": "@js-ligo/safe-escrow",
  "version": "0.2.0",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "pnpm build:clean && pnpm build:types && pnpm build:js",
    "test:it": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "lint": "eslint src/* --fix",
    "prepare": "pnpm build"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ethersproject/providers": "^5.7.2",
    "@gnosis.pm/safe-core-sdk": "^3.1.1",
    "@gnosis.pm/safe-core-sdk-types": "^1.6.1",
    "@gnosis.pm/safe-ethers-lib": "^1.6.1",
    "@js-ligo/agreements": "workspace:^0.2.0",
    "@js-ligo/interact": "workspace:^0.2.0",
    "@js-ligo/vocab": "workspace:^0.2.0",
    "caip": "^1.1.0",
    "ethers": "^5.7.1"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  }
}
